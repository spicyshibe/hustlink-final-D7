<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .application-status {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8em;
        }
        .status-pending { background-color: #fff3cd; color: #856404; }
        .status-reviewed { background-color: #d1ecf1; color: #0c5460; }
        .status-accepted { background-color: #d4edda; color: #155724; }
        .status-rejected { background-color: #f8d7da; color: #721c24; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">HustLink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link">Welcome, <%= user.username %></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs">Browse Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <h1 class="mb-4">My Dashboard</h1>
                
                <!-- User Info Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h4><%= user.username %></h4>
                                <p class="text-muted"><%= user.email %></p>
                                <p><%= user.Alamat %></p>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="badge bg-info p-2">Job Seeker</span>
                                <p class="mt-2">
                                    <small>Member since: <%= new Date(user.created_at).toLocaleDateString() %></small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- My Applications -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">My Applications</h4>
                    </div>
                    <div class="card-body">
                        <% if (applications && applications.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Application ID</th>
                                            <th>Category</th>
                                            <th>Applied Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% applications.forEach(application => { %>
                                            <tr>
                                                <td>#<%= application.id %></td>
                                                <td>
                                                    <span class="badge bg-primary"><%= application.category_name %></span>
                                                </td>
                                                <td><%= new Date(application.Date).toLocaleDateString() %></td>
                                                <td>
                                                    <span class="application-status status-pending">Pending Review</span>
                                                </td>
                                                <td>
                                                    <form action="/applications/<%= application.id %>/withdraw" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to withdraw this application?')">
                                                            Withdraw
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                You haven't applied for any jobs yet. Browse available jobs below.
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <!-- Quick Stats -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Application Stats</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total Applications:</span>
                            <strong><%= applications ? applications.length : 0 %></strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Pending Review:</span>
                            <strong><%= applications ? applications.length : 0 %></strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Active Jobs:</span>
                            <strong><%= jobs ? jobs.length : 0 %></strong>
                        </div>
                    </div>
                </div>
                
                <!-- Available Jobs -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Available Jobs</h5>
                    </div>
                    <div class="card-body">
                        <% if (jobs && jobs.length > 0) { %>
                            <div class="list-group">
                                <% jobs.slice(0, 5).forEach(job => { %>
                                    <a href="/jobs/<%= job.id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= job.title %></h6>
                                            <small class="text-muted"><%= new Date(job.deadline).toLocaleDateString() %></small>
                                        </div>
                                        <p class="mb-1"><small><%= job.description.substring(0, 60) %>...</small></p>
                                        <small>
                                            <span class="badge bg-info"><%= job.category_name %></span>
                                            <span class="badge bg-success ms-1">Open</span>
                                        </small>
                                    </a>
                                <% }); %>
                            </div>
                            <% if (jobs.length > 5) { %>
                                <div class="text-center mt-2">
                                    <a href="/jobs" class="btn btn-sm btn-outline-primary">View All Jobs</a>
                                </div>
                            <% } %>
                        <% } else { %>
                            <p class="text-muted">No jobs available at the moment.</p>
                        <% } %>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="card mt-4">
                    <div class="card-body">
                        <h6>Quick Actions</h6>
                        <div class="d-grid gap-2">
                            <a href="/jobs" class="btn btn-primary">Browse All Jobs</a>
                            <a href="/profile" class="btn btn-outline-primary">Update Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>