<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .stat-card {
            border-radius: 10px;
            padding: 20px;
            color: white;
            margin-bottom: 20px;
        }
        .stat-card.total-jobs { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .stat-card.open-jobs { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
        .stat-card.applicants { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
        .stat-card.categories { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
        .stat-card i {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
        }
        .tab-content {
            padding: 20px;
            border: 1px solid #dee2e6;
            border-top: none;
            border-radius: 0 0 5px 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">HustLink</a>
            <div class="navbar-nav ms-auto">
                <span class="nav-link">Admin: <%= user.username %></span>
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/categories">Manage Categories</a>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <h1 class="mb-4">Admin Dashboard</h1>
        
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card total-jobs text-center">
                    <i class="fas fa-briefcase"></i>
                    <div class="stat-number">
                        <% 
                            const totalJobs = jobs ? jobs.length : 0;
                        %>
                        <%= totalJobs %>
                    </div>
                    <p>Total Jobs</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card open-jobs text-center">
                    <i class="fas fa-door-open"></i>
                    <div class="stat-number">
                        <%
                            const openJobs = jobs ? jobs.filter(job => job.status === 'Open').length : 0;
                        %>
                        <%= openJobs %>
                    </div>
                    <p>Open Jobs</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card applicants text-center">
                    <i class="fas fa-users"></i>
                    <div class="stat-number">
                        <%= applicants ? applicants.length : 0 %>
                    </div>
                    <p>Total Applicants</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card categories text-center">
                    <i class="fas fa-tags"></i>
                    <div class="stat-number">
                        <%= categories ? categories.length : 0 %>
                    </div>
                    <p>Categories</p>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="jobs-tab" data-bs-toggle="tab" data-bs-target="#jobs" type="button">Manage Jobs</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="applicants-tab" data-bs-toggle="tab" data-bs-target="#applicants" type="button">View Applicants</button>
            </li>
        </ul>

        <div class="tab-content" id="adminTabsContent">
            <!-- Jobs Tab -->
            <div class="tab-pane fade show active" id="jobs" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Job Listings</h3>
                    <a href="/jobs/create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Job
                    </a>
                </div>
                
                <% if (jobs && jobs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Deadline</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% jobs.forEach(job => { %>
                                    <tr>
                                        <td><%= job.id %></td>
                                        <td><strong><%= job.title %></strong></td>
                                        <td>
                                            <span class="badge bg-info"><%= job.category_name %></span>
                                        </td>
                                        <td><%= new Date(job.deadline).toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge <%= job.status === 'Open' ? 'bg-success' : 'bg-danger' %>">
                                                <%= job.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/jobs/<%= job.id %>/edit" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form action="/jobs/<%= job.id %>/delete" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this job?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        No jobs have been posted yet. <a href="/jobs/create" class="alert-link">Create the first job listing</a>.
                    </div>
                <% } %>
            </div>

            <!-- Applicants Tab -->
            <div class="tab-pane fade" id="applicants" role="tabpanel">
                <h3 class="mb-3">Job Applicants</h3>
                
                <% if (applicants && applicants.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Applicant</th>
                                    <th>Email</th>
                                    <th>Applied For</th>
                                    <th>Application Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% applicants.forEach(applicant => { %>
                                    <tr>
                                        <td><%= applicant.id %></td>
                                        <td><strong><%= applicant.username %></strong></td>
                                        <td><%= applicant.email %></td>
                                        <td>
                                            <span class="badge bg-primary"><%= applicant.category_name %></span>
                                        </td>
                                        <td><%= new Date(applicant.Date).toLocaleDateString() %></td>
                                        <td>
                                            <form action="/admin/applications/<%= applicant.id %>/delete" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this application?')">
                                                    <i class="fas fa-trash"></i> Remove
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        No applications have been submitted yet.
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>